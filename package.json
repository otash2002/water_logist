{
  "name": "water_logist",
  "version": "1.0.0",
  "description": "Water delivery logistics management system API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "prepare": "husky install",
    "test": "NODE_ENV=test jest",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "water",
    "delivery",
    "logistics",
    "api",
    "express",
    "mongodb"
  ],
  "author": "otash2002",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/otash2002/water_logist"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.0.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.2.5",
    "nodemon": "^3.0.0",
    "prettier": "^3.6.2",
    "supertest": "^6.0.0"
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ],
    "**/*.js": [
      "eslint --fix"
    ]
  }
}
